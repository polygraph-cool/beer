		// top 0
		// right 0
		// font-size 0.8em
		// padding 0.5rem 0
		// transform translateY(100%)
		// +mq('full')
			// transform translateY(0)
			// padding 2rem 0
	
	.explore__transition
		max-width 40rem
		padding 0 0.75rem
		margin 6rem auto 4rem auto
		+mq('full')
			margin 6rem auto